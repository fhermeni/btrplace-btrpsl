<vjob id="clients.fhermeni">
    <vms>
        <vm id="clients.fhermeni.vm1" tpl="tinyInstance">
            <option>preemptible</option>
        </vm>
        <vm id="clients.fhermeni.vm2" tpl="tinyInstance">
            <option>preemptible</option>

        </vm>
        <vm id="clients.fhermeni.vm3" tpl="tinyInstance">
            <option>preemptible</option>
        </vm>
        <vm id="clients.fhermeni.vm4" tpl="tinyInstance">
            <option>preemptible</option>
        </vm>
        <vm id="clients.fhermeni.vm5" tpl="tinyInstance">
            <option>preemptible</option>
        </vm>
    </vms>
    <constraints>
        <constraint name="spread">
            <params>
                <param>
                    <set>
                        <vm ref="clients.fhermeni.vm1"/>
                        <vm ref="clients.fhermeni.vm2"/>
                        <vm ref="clients.fhermeni.vm3"/>
                        <vm ref="clients.fhermeni.vm4"/>
                        <vm ref="clients.fhermeni.vm5"/>
                    </set>
                </param>
            </params>
        </constraint>
        <constraint name="fence">
            <params>
                <param>
                    <set>
                        <vm ref="clients.fhermeni.vm1"/>
                        <vm ref="clients.fhermeni.vm2"/>
                        <vm ref="clients.fhermeni.vm3"/>
                    </set>
                </param>
                <param>
                    <set>
                        <node id="pastel-1"/>
                        <node id="pastel-2"/>
                        <node id="pastel-3"/>
                    </set>
                </param>
            </params>
        </constraint>
        <constraint name="among">
            <params>
                <param>
                    <set>
                        <vm ref="clients.fhermeni.vm1"/>
                        <vm ref="clients.fhermeni.vm2"/>
                        <vm ref="clients.fhermeni.vm3"/>
                        <vm ref="clients.fhermeni.vm4"/>
                        <vm ref="clients.fhermeni.vm5"/>
                    </set>
                </param>
                <param>
                    <set>
                        <set>
                            <node ref="pastel-1"/>
                            <node ref="pastel-2"/>
                            <node ref="pastel-3"/>
                        </set>
                        <set>
                            <node ref="pastel-4"/>
                            <node ref="pastel-5"/>
                            <node ref="pastel-6"/>
                        </set>
                    </set>
                </param>
            </params>
        </constraint>
        <constraint name="capacity">
            <params>
                <param>
                    <set>
                        <node ref="pastel-4"/>
                        <node ref="pastel-5"/>
                        <node ref="pastel-6"/>
                        <node ref="pastel-1"/>
                        <node ref="pastel-2"/>
                        <node ref="pastel-3"/>
                    </set>
                </param>
                <param>
                    <int value="25"/>
                </param>
            </params>
        </constraint>

    </constraints>

</vjob>

